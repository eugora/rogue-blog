    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Tests",
            "type": "node",
            "request": "launch",
            "env": {
              "NODE_ENV": "test"
            },
            "args": [
              "--colors",
              "--runInBand",
              "--coverage"
            ],
            "runtimeArgs": [
              "--nolazy"
            ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
          }
    ]
}